html
	head
		title!= 'chat by @findemor'
		include partials/head
		script(src="https://cdn.socket.io/socket.io-1.3.5.js")

	body
		div.container
			include partials/navbar

			.col-sm-8.col-xs-12
				table#chat.table.table-striped
					thead
						tr
							th tarea
							th Descripcion
							th
					tbody
			#participants.col-sm-4.hidden-xs
				ul#typing.list-group
					li#counter.list-group-item.active participantes: #{counter} 

		footer.footer
			form
				div.input-group
					label(for="username") nombre tarea: 
					input#username.form-control(type="text" placeholder="Username")
				div#mandatory.input-group
					input#message.form-control(type="text" placeholder="descripcion..." autofocus)
					span.input-group-btn
						button#addMessage.btn.btn-primary(type="submit")="Enviar!"

		script(src="/public/scripts.js")
